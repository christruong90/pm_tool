<h1> <%= @project.title %> </h1>

<p> <%= @project.description %> </p>

<p> <%= @project.due_date %> </p>

<%= link_to "Edit", edit_project_path(@project) %>
<%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure"} %>

<%= @task.errors.full_messages.join(", ") %>
<%= form_for [@project, @task] do |f| %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>

<% @project.tasks.each do |task| %>
  <%= task.description %>
  <%= link_to "Delete Task", [@project, task], method: :delete, data: {confirm: "Are you sure?"} %>

  <hr>
<% end %>

<%= @task.errors.full_messages.join(", ") %>
<%= form_for [@project, @discussion] do |f| %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>

<% @project.discussions.each do |dis| %>
  <%= dis.description %>
  <%= link_to "Delete Discussion", [@project, dis], method: :delete, data: {confirm: "Are you sure?"} %>

  <hr>
<% end %>
